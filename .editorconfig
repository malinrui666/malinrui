# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.nix]
indent_size = 2

[*.lock]
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[.envrc]
indent_size = 2

[*.py]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
